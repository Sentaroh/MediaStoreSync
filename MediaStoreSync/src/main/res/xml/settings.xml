<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	    
       <CheckBoxPreference
			android:key="settings_debug_msg_diplay"
			android:title="@string/settings_debug_msg_diplay_title"
			android:summary="@string/settings_debug_msg_diplay_summary_dis" />
   	    <ListPreference
			android:key="settings_log_option"
			android:title="@string/settings_log_option_title"
			android:summary="@string/settings_log_option_summary_no" 
			android:dialogTitle="@string/settings_log_option_dialog_title"
			android:entries="@array/settings_log_option_list_entries"
			android:entryValues="@array/settings_log_option_list_values" />
   	    <ListPreference
			android:key="settings_log_level"
			android:title="@string/settings_log_title"
			android:summary="@string/settings_log_summary"
			android:dialogTitle="@string/settings_log_dialog_title"
			android:entries="@array/settings_log_list_entries"
			android:entryValues="@array/settings_log_list_values"/>
   	    <EditTextPreference
			android:key="@string/settings_log_dir"
			android:title="@string/settings_log_dir_title"
			android:summary="@string/settings_log_dir_summary"
			android:inputType="text"/>

    <CheckBoxPreference
		android:key="settings_exit_clean"
		android:title="@string/settings_exit_clean_title"
		android:summary="@string/settings_exit_clean_summary_ena" />
	
</PreferenceScreen>